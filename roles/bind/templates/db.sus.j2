$TTL	604800
{{domain}}.	IN	SOA	remote2.{{domain}}. mail.{{domain}}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{% for vm in groups['dns_servers'] %}
{{domain}}.	IN	NS	{{vm}}
{% endfor %}
{% for vm in groups['all'] %}
{{ vm }} IN A {{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}
