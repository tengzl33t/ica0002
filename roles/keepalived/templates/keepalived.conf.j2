vrrp_script check_haproxy {                 
    script "/usr/local/bin/keepalived_script" 
    weight 20                              
    interval 1               
}
vrrp_instance sus {             
    interface ens3
    virtual_router_id 1
    {% if inventory_hostname == 'remote1' %}
    priority 100
    {% else %}
    priority 99
    {% endif %}
    advert_int 1                            
    virtual_ipaddress {                     
        192.168.100.{{ hostvars['remote1']['ansible_default_ipv4']['address'].split('.')[-1] }}/24                   
    }
    unicast_peer {      
        {% for remote in groups['haproxy'] %}                    
        {% if inventory_hostname != remote %}
        {{ hostvars[remote]['ansible_default_ipv4']['address'] }}
        {% endif %}
        {% endfor %}
    }
    track_script {
        check_haproxy
    }
}
