global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: /prometheus/metrics
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'linux'
    static_configs:
      - targets:
        {% for machine in groups['all'] %}- {{ machine }}:9100
        {% endfor %}

  - job_name: 'nginx'
    static_configs:
      - targets:
        {% for machine in groups['int_serv'] %}- {{ machine }}:9113
        {% endfor %}

  - job_name: 'haproxy'
    static_configs:
      - targets:
        {% for machine in groups['app_stack'] %}- {{ machine }}:9101
        {% endfor %}

  - job_name: 'keepalived'
    static_configs:
      - targets:
        {% for machine in groups['app_stack'] %}- {{ machine }}:9165
        {% endfor %}

  - job_name: 'bind9'
    static_configs:
      - targets:
        {% for machine in groups['dns_servers'] %}- {{ machine }}:9119
        {% endfor %}

  - job_name: 'mysql'
    static_configs:
      - targets:
        {% for machine in groups['app_stack'] %}- {{ machine }}:9104
        {% endfor %}
  
  - job_name: 'influxdb'
    static_configs:
      - targets:
        {% for machine in groups['int_serv'] %}- {{ machine }}:9424
        {% endfor %}
        